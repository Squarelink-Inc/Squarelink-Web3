{
  "name": "squarelink",
  "version": "1.0.10",
  "description": "Squarelink's Web3 library",
  "main": "dist/index.js",
  "module": "es/index.js",
  "browser": "lib/squarelink.min.js",
  "scripts": {
    "networks": "curl -X GET https://api.squarelink.com/networks > networks.json",
    "build": "npm run networks && npm run clean && npm run build:lib && npm run build:es && npm run insert-version && npm run build:umd && npm run dts-bundle",
    "build:min": "webpack",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf umd lib es",
    "build:lib": "tsc --outDir lib --module commonjs",
    "build:es": "tsc --outDir es --module es2015",
    "build:umd": "webpack",
    "dts-bundle": "dts-bundle --name umd/index --main es --outputAsModuleFolder",
    "set-env": "node replace.js"
  },
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Squarelink-Inc/Squarelink-Web3.git"
  },
  "keywords": [
    "web3",
    "web3.js",
    "ethereum",
    "squarelink",
    "blockchain",
    "dapp",
    "dapps",
    "cryptocurrency"
  ],
  "author": "Alexander Patin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Squarelink-Inc/Squarelink-Web3/issues"
  },
  "homepage": "https://docs.squarelink.com",
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "squarelink-provider-engine": "^15.0.5"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-plugin-add-module-exports": "1.0.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "dotenv": "^8.1.0",
    "dts-bundle": "0.7.3",
    "replace-in-file": "3.4.3",
    "rimraf": "2.6.1",
    "typescript": "3.2.2",
    "webpack": "4.28.3",
    "webpack-cli": "^3.3.8"
  }
}
